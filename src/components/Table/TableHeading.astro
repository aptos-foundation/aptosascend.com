---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"th"> {}

const { class: className, ...restProps } = Astro.props;
---

<th
  class:list={["border-b border-border px-2 py-1 text-left first:pl-0 last:pr-0", className]}
  {...restProps}
>
  <slot />
</th>
