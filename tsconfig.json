{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
      {
        "name": "gql.tada/ts-plugin",
        "schema": "./src/lib/datocms/schema.graphql",
        "tadaOutputLocation": "./src/lib/datocms/graphql-env.d.ts"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["*"]
    },

  }
}
